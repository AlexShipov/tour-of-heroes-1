{
  "name": "tour-of-heroes",
  "version": "0.0.1",
  "description": "tour-of-heroes (thanks to Patrick Stapleton <patrick@angularclass.com> for the starter seed).",
  "author": "Alex Shipov",
  "license": "MIT",
  "scripts": {
    "runnet": "dotnet run --server.urls=http://localhost:5001/",
    "build:prod": "npm run clean:dist && webpack --config config/webpack.prod.js  --progress --profile --bail",
    "build:dev": "npm run clean:dist && webpack --config config/webpack.dev.js --progress --profile",
    "clean:dist": "npm run rimraf -- dist compiled dll aot",
    "clean:zz": "npm cache clean && npm run rimraf -- node_modules doc coverage dist compiled dll aot",
    "lint": "npm run tslint \"src/**/*.ts\" --noUnusedParameters --noUnusedLocals",
    "rimraf": "rimraf",
    "server:dev:hmr": "npm run server:dev -- --inline --hot",
    "server:dev": "webpack-dev-server --config config/webpack.dev.js --open --progress --profile --watch --content-base src/",
    "server:prod": "http-server dist -c-1 --cors",
    "start:hmr": "concurrently \"npm run server:dev:hmr\" \"npm run runnet\"",
    "tslint": "tslint",
    "webpack-dev-server": "webpack-dev-server",
    "webpack": "webpack",
    "publish": "npm run rimraf -- bin && npm run build:prod && npm run dotnetpub && npm run postpub",
    "dotnetpub": "dotnet publish .\\tour-of-heroes-1.csproj -o .\\bin\\pub -c Release",
    "postpub": "cpx \"./dist/**/*.*\" \"./bin/pub/dist\""
  },
  "dependencies": {
    "@angular/animations": "^4.1.0",
    "@angular/common": "^4.1.0",
    "@angular/compiler": "^4.1.0",    
    "@angular/core": "^4.1.0",
    "@angular/forms": "^4.1.0",
    "@angular/http": "^4.1.0",
    "@angular/platform-browser": "^4.1.0",
    "@angular/platform-browser-dynamic": "^4.1.0",
    "@angular/platform-server": "^4.1.0",
    "@angular/router": "^4.1.0",
    "@angularclass/conventions-loader": "^1.0.13",
    "@angularclass/hmr": "^1.2.2",
    "@angularclass/hmr-loader": "^3.0.2",
    "core-js": "^2.4.1",
    "http-server": "^0.9.0",
    "ie-shim": "^0.1.0",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.3.0",
    "typescript": "^2.3.1",
    "zone.js": "^0.8.9"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^4.1.0",
    "@types/hammerjs": "^2.0.34",
    "@types/node": "^7.0.14",
    "@types/source-map": "^0.5.0",
    "@types/uglify-js": "^2.6.28",
    "@types/webpack": "^2.2.15",
    "add-asset-html-webpack-plugin": "^2.0.1",
